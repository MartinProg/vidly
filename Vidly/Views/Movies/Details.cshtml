@model Vidly.Models.Movie
@{
    ViewBag.Title = @Model.Name;
}

<h2>@Model.Name</h2>
<ul class="align-items-lg-start">
    <li><b>Genre: </b> @Model.Genre.Name </li>
    <li><b>Release Date: </b> @Model.ReleaseDate.ToLongDateString() </li>
    <li><b>Date Added: </b> @Model.AddedDate.ToLongDateString() </li>
    <li><b>Number In Stock: </b> @Model.StockNumber </li>

</ul>


