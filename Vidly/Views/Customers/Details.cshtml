@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul class="align-items-lg-start">
    <li><b>Membership Type: </b> @Model.MembershipType.Name </li>
    @if (!string.IsNullOrEmpty(Model.birthdate.ToString()))
    {
        <li><b>Birthdate: </b> @Model.birthdate.Value.ToShortDateString()</li>
    }
</ul>
